    <servlet-name>VerifyVendorController</servlet-name>
    <url-pattern>/VerifyVendorController</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ListProductsController</servlet-name>
    <servlet-class>com.pack.controller.ListProductsController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ListProductsController</servlet-name>
    <url-pattern>/ListProductsController</url-pattern>
  </servlet-mapping>
