    <servlet-name>RemoveProductController</servlet-name>
    <url-pattern>/RemoveProductController</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ViewProductController</servlet-name>
    <servlet-class>com.pack.controller.ViewProductController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ViewProductController</servlet-name>
    <url-pattern>/ViewProductController</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AddProductController</servlet-name>
    <servlet-class>com.pack.controller.AddProductController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddProductController</servlet-name>
    <url-pattern>/AddProductController</url-pattern>
  </servlet-mapping>
    <servlet>
    <servlet-name>LogoutController</servlet-name>
    <servlet-class>com.pack.controller.LogoutController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutController</servlet-name>
    <url-pattern>/LogoutController</url-pattern>
  </servlet-mapping>
  <session-config>
  	<session-timeout>10</session-timeout>
  </session-config>
  
</web-app>